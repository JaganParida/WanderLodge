<% layout("/layouts/boilerplate") %>
    <div class="form-container">
        <div class="row justify-content-center mt-4 mb-5">
            <div class="col-12 col-lg-8 col-xl-7">
                <div class="form-header mb-4">
                    <h2 class="form-title">Create a New Listing</h2>
                    <p class="text-muted">Share your amazing space with travelers around the world</p>
                </div>
                <div class="form-card">
                    <form method="POST" action="/listings" novalidate class="needs-validation"
                        enctype="multipart/form-data">
                        <div class="mb-4">
                            <label for="title" class="form-label">Title</label>
                            <input name="listing[title]" id="title" placeholder="Enter a catchy title for your listing"
                                type="text" class="form-control form-control-lg" required />
                            <div class="valid-feedback">Title looks good!</div>
                            <div class="invalid-feedback">Please provide a title for your listing</div>
                        </div>

                        <div class="mb-4">
                            <label for="description" class="form-label">Description</label>
                            <textarea name="listing[description]" id="description"
                                placeholder="Describe your listing in detail. What makes it special?" rows="6"
                                class="form-control" required></textarea>
                            <div class="invalid-feedback">Please enter a description for your listing</div>
                        </div>

                        <div class="mb-4">
                            <label for="image" class="form-label">Listing Image</label>
                            <input name="listing[image]" id="image" type="file" accept="image/*"
                                class="form-control form-control-lg" />
                            <small class="form-text text-muted">Upload a high-quality image of your listing</small>
                        </div>

                        <div class="row">
                            <div class="mb-4 col-md-6">
                                <label for="price" class="form-label">Price per Night</label>
                                <div class="input-group">
                                    <span class="input-group-text">&#8377;</span>
                                    <input name="listing[price]" id="price" placeholder="1200" type="number" min="1"
                                        class="form-control form-control-lg" required />
                                </div>
                                <div class="invalid-feedback">Please enter a valid price</div>
                            </div>

                            <div class="mb-4 col-md-6">
                                <label for="country" class="form-label">Country</label>
                                <input name="listing[country]" id="country" placeholder="India" type="text"
                                    class="form-control form-control-lg" required />
                                <div class="invalid-feedback">Please enter the country name</div>
                            </div>
                        </div>

                        <div class="mb-4">
                            <label for="location" class="form-label">Location</label>
                            <input name="listing[location]" id="location" placeholder="Jaipur, Rajasthan" type="text"
                                class="form-control form-control-lg" required />
                            <div class="invalid-feedback">Please enter the location</div>
                        </div>

                        <div class="d-grid gap-2 mt-4">
                            <button type="submit" class="btn btn-lg add-btn">Create Listing</button>
                            <a href="/listings" class="btn btn-outline-secondary btn-lg">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>