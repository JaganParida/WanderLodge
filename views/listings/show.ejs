<% layout("layouts/boilerplate") %>
    <script>
        const mapToken = "<%= process.env.MAP_TOKEN %>";
        const coordinates = <%= JSON.stringify(listing.geometry.coordinates) %>;
    </script>

    <div class="listing-show-container">
        <div class="row mt-4">
            <div class="col-12">
                <h1 class="listing-title mb-3">
                    <%= listing.title %>
                </h1>
                <div class="listing-meta">
                    <span class="listing-location">
                        <i class="fa-solid fa-location-dot"></i>
                        <%= listing.location %>, <%= listing.country %>
                    </span>
                    <% if(listing.owner) { %>
                        <span class="listing-owner">
                            <i class="fa-solid fa-user"></i>
                            Owned by <%= listing.owner.username %>
                        </span>
                        <% } %>
                </div>
            </div>
        </div>

        <div class="row mb-4">
            <div class="col-12 col-lg-8">
                <div class="show-image-container">
                    <img src="<%= listing.image.url %>" class="show-img" alt="listing_image" />
                </div>
            </div>
            <div class="col-12 col-lg-4">
                <div class="booking-card">
                    <div class="price-section mb-3">
                        <span class="price-large">&#8377;<%= listing.price.toLocaleString("en-IN") %></span>
                        <span class="price-unit">/ night</span>
                    </div>
                    <% if(currentUser && listing.owner && listing.owner._id.equals(currentUser._id)) { %>
                        <div class="d-grid gap-2">
                            <a href="/listings/<%= listing._id %>/edit" class="btn edit-btn">
                                <i class="fa-solid fa-pen me-2"></i>Edit Listing
                            </a>
                            <form action="/listings/<%= listing._id %>?_method=DELETE" method="post" class="d-grid">
                                <button type="submit" class="btn btn-outline-danger"
                                    onclick="return confirm('Are you sure you want to delete this listing?')">
                                    <i class="fa-solid fa-trash me-2"></i>Delete Listing
                                </button>
                            </form>
                        </div>
                        <% } else { %>
                            <button class="btn btn-primary btn-lg w-100">Reserve</button>
                            <% } %>
                </div>
            </div>
        </div>

        <div class="row mb-4">
            <div class="col-12 col-lg-8">
                <div class="description-section">
                    <h3 class="section-title">About this place</h3>
                    <p class="listing-description">
                        <%= listing.description %>
                    </p>
                </div>
            </div>
        </div>

        <div class="row mb-4">
            <div class="col-12">
                <div class="map-section">
                    <h3 class="section-title mb-3">Where you'll be</h3>
                    <div id="map" class="map-container"></div>
                </div>
            </div>
        </div>

        <div class="row mb-4">
            <div class="col-12 col-lg-8">
                <% if(currentUser) { %>
                    <hr class="my-5">
                    <h3 class="section-title mb-4">Leave A Review</h3>
                    <form action="/listings/<%= listing._id %>/reviews" method="post" novalidate
                        class="needs-validation review-form">
                        <div class="mb-4">
                            <label for="rating" class="form-label">Rating</label>
                            <fieldset class="starability-slot">
                                <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1"
                                    checked aria-label="No rating" />
                                <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                                <label for="first-rate1" title="Terrible">1 star</label>
                                <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                                <label for="first-rate2" title="Not good">2 stars</label>
                                <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                                <label for="first-rate3" title="Average">3 stars</label>
                                <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                                <label for="first-rate4" title="Very good">4 stars</label>
                                <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                                <label for="first-rate5" title="Amazing">5 stars</label>
                            </fieldset>
                        </div>
                        <div class="mb-4">
                            <label for="comment" class="form-label">Your Review</label>
                            <textarea name="review[comment]" id="comment" rows="5" class="form-control"
                                placeholder="Share your experience..." required></textarea>
                            <div class="invalid-feedback">Please add some comments for review</div>
                        </div>
                        <button type="submit" class="btn btn-primary">Submit Review</button>
                    </form>
                    <% } %>

                        <% if(listing.reviews && listing.reviews.length> 0) { %>
                            <hr class="my-5">
                            <h3 class="section-title mb-4">Reviews (<%= listing.reviews.length %>)</h3>
                            <div class="reviews-container">
                                <% for(let review of listing.reviews) { %>
                                    <div class="review-card mb-4">
                                        <div class="review-header mb-3">
                                            <div class="review-author">
                                                <div class="author-avatar">
                                                    <i class="fa-solid fa-user"></i>
                                                </div>
                                                <div class="author-info">
                                                    <h5 class="author-name mb-1">@<%= review.author.username %>
                                                    </h5>
                                                    <p class="starability-result mb-0"
                                                        data-rating="<%= review.rating %>"></p>
                                                </div>
                                            </div>
                                            <% if(currentUser && review.author &&
                                                review.author._id.equals(currentUser._id)) { %>
                                                <form
                                                    action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE"
                                                    method="post" class="review-delete-form">
                                                    <button type="submit" class="btn btn-sm btn-outline-danger"
                                                        onclick="return confirm('Are you sure you want to delete this review?')">
                                                        <i class="fa-solid fa-trash"></i>
                                                    </button>
                                                </form>
                                                <% } %>
                                        </div>
                                        <p class="review-comment">
                                            <%= review.comment %>
                                        </p>
                                    </div>
                                    <% } %>
                            </div>
                            <% } %>
            </div>
        </div>
    </div>
    <script src="/js/map.js"></script>