<% layout("/layouts/boilerplate") %>
    <div class="form-page-wrapper">
        <div class="form-container">
            <div class="form-content">
                <div class="form-header">
                    <h2 class="form-title">Edit your Listing</h2>
                    <p class="text-muted">Update your listing information</p>
                </div>
                <div class="form-card">
                    <form method="POST" action="/listings/<%= listing._id %>?_method=PUT" novalidate
                        class="needs-validation" enctype="multipart/form-data">
                        <div class="mb-4">
                            <label for="title" class="form-label">Title</label>
                            <input name="listing[title]" id="title" value="<%= listing.title %>" type="text"
                                class="form-control form-control-lg" required />
                            <div class="valid-feedback">Title looks good!</div>
                            <div class="invalid-feedback">Please provide a title for your listing</div>
                        </div>

                        <div class="mb-4">
                            <label for="description" class="form-label">Description</label>
                            <textarea name="listing[description]" id="description" rows="6" class="form-control"
                                required><%= listing.description %></textarea>
                            <div class="invalid-feedback">Please enter a description for your listing</div>
                        </div>

                        <div class="mb-4">
                            <label class="form-label d-block">Current Image</label>
                            <div class="current-image-container mb-3">
                                <img src="<%= originalImageUrl %>" alt="Current listing image" class="current-image" />
                            </div>
                            <label for="image" class="form-label">Upload New Image (Optional)</label>
                            <input name="listing[image]" id="image" type="file" accept="image/*"
                                class="form-control form-control-lg" />
                            <small class="form-text text-muted">Leave empty to keep the current image</small>
                        </div>

                        <div class="row">
                            <div class="mb-4 col-md-6">
                                <label for="price" class="form-label">Price per Night</label>
                                <div class="input-group">
                                    <span class="input-group-text">&#8377;</span>
                                    <input name="listing[price]" id="price" value="<%= listing.price %>" type="number"
                                        min="1" class="form-control form-control-lg" required />
                                </div>
                                <div class="invalid-feedback">Please enter a valid price</div>
                            </div>

                            <div class="mb-4 col-md-6">
                                <label for="country" class="form-label">Country</label>
                                <input name="listing[country]" id="country" value="<%= listing.country %>" type="text"
                                    class="form-control form-control-lg" required />
                                <div class="invalid-feedback">Please enter the country name</div>
                            </div>
                        </div>

                        <div class="mb-4">
                            <label for="location" class="form-label">Location</label>
                            <input name="listing[location]" id="location" value="<%= listing.location %>" type="text"
                                class="form-control form-control-lg" required />
                            <div class="invalid-feedback">Please enter the location</div>
                        </div>

                        <div class="d-grid gap-2 mt-4">
                            <button type="submit" class="btn btn-lg edit-btn">Save Changes</button>
                            <a href="/listings/<%= listing._id %>" class="btn btn-outline-secondary btn-lg">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>