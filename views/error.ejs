<% layout("/layouts/boilerplate") %>
    <div class="error-container">
        <div class="row justify-content-center align-items-center min-vh-100">
            <div class="col-12 col-md-8 col-lg-6 text-center">
                <div class="error-content">
                    <div class="error-icon mb-4">
                        <i class="fa-solid fa-triangle-exclamation"></i>
                    </div>
                    <h1 class="error-title mb-3">Oops!</h1>
                    <h2 class="error-message mb-4">
                        <%= message %>
                    </h2>
                    <p class="error-description text-muted mb-4">
                        We're sorry, but the page you're looking for doesn't exist or has been moved.
                    </p>
                    <div class="error-actions">
                        <a href="/listings" class="btn btn-primary btn-lg me-2">Go Home</a>
                        <button onclick="window.history.back()" class="btn btn-outline-secondary btn-lg">Go
                            Back</button>
                    </div>
                </div>
            </div>
        </div>
    </div>